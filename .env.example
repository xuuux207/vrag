# Azure Speech Service
AZURE_SPEECH_KEY=your_azure_speech_key
AZURE_SPEECH_REGION=eastus
AZURE_SPEECH_ENDPOINT=https://eastus.api.cognitive.microsoft.com/

# VAD Configuration
# Options: azure (Azure内置VAD) 或 silero (Silero VAD)
VAD_TYPE=azure
# Silero VAD参数（仅当VAD_TYPE=silero时有效）
VAD_THRESHOLD=0.5  # VAD阈值（0-1，越低越灵敏，默认0.5）
VAD_MIN_SPEECH_DURATION=0.3  # 最小语音时长（秒，默认0.3）
VAD_MIN_SILENCE_DURATION=1.0  # 最小静音时长（秒，停顿多久算结束，默认1.0）

# Azure AI Search
AZURE_SEARCH_KEY=your_azure_search_key
AZURE_SEARCH_ENDPOINT=https://your-service.search.windows.net
AZURE_SEARCH_INDEX_NAME=customer-service-kb

# Qwen LLM
QWEN_API_BASE=https://dashscope.aliyuncs.com/compatible-mode/v1
QWEN_MODEL=qwen-plus
QWEN_TOKEN=your_qwen_token

# Embedding Service (使用硅基流动API)
EMBEDDING_MODEL=BAAI/bge-m3
EMBEDDING_URL=https://api.siliconflow.cn/v1/embeddings
EMBEDDING_TOKEN=your_siliconflow_token

# Reranking Service (使用硅基流动API)
RERANKING_MODEL=BAAI/bge-reranker-v2-m3
RERANKING_URL=https://api.siliconflow.cn/v1/rerank
RERANKING_TOKEN=your_siliconflow_token
